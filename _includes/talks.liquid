<div class="col">
  <a href="{% if talk.redirect %}{{ talk.redirect }}{% else %}{{ talk.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if talk.img %}
        {%
          include figure.liquid
          loading="eager"
          path=talk.img
          sizes = "250px"
          alt="talk thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ talk.title }}</h5>
        <p class="card-text">{{ talk.description }}</p>
      </div>
    </div>
  </a>
</div>
